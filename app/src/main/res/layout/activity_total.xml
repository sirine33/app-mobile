<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="#1C1C1B"
    tools:context=".total">

    <TextView
        android:id="@+id/tot1"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:backgroundTintMode="screen"
        android:ems="10"
        android:paddingStart="10dp"
        android:paddingTop="14dp"
        android:text="Budgets :"
        android:textColor="@android:color/holo_orange_dark"
        android:textDirection="ltr"
        android:textIsSelectable="false"
        android:textSize="36sp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/tot2"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:backgroundTintMode="screen"
        android:ems="10"
        android:paddingStart="10dp"
        android:paddingTop="14dp"
        android:text="Transactions :"
        android:textColor="@android:color/holo_orange_dark"
        android:textDirection="ltr"
        android:textIsSelectable="false"
        android:textSize="36sp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/tot3"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:backgroundTintMode="screen"
        android:ems="10"
        android:paddingStart="10dp"
        android:paddingTop="14dp"
        android:text="The rest :"
        android:textColor="@android:color/holo_orange_dark"
        android:textDirection="ltr"
        android:textIsSelectable="false"
        android:textSize="36sp"
        android:textStyle="italic|bold" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="129dp"
        android:layout_height="106dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="140dp"
        android:cropToPadding="true"
        android:duplicateParentState="true"
        app:srcCompat="@drawable/ic_baseline_favorite_24" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Project1.AppBarOverlay">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/myToolbar"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@android:color/holo_orange_dark"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="center"
        app:popupTheme="@style/Theme.Project1.PopupOverlay"
        app:title="Total"
        app:titleMarginStart="160dp"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Display1"
        app:titleTextColor="@android:color/black" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="47dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        app:layout_anchor="@+id/imageView"
        app:layout_anchorGravity="bottom|center"
        app:srcCompat="@drawable/ic_baseline_arrow" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
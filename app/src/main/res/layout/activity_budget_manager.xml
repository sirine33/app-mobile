<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".budgetManager">


  <Button
      android:id="@+id/budgetButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/button_text"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
      android:drawableLeft="@drawable/purse"
    android:textColor="@color/black"
      style="?android:attr/borderlessButtonStyle"
  />
  <Button
      android:id="@+id/transactionButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/button_text_transaction"

      android:layout_marginTop="20dp"
      android:layout_below="@+id/budgetButton"
      android:drawableLeft="@drawable/transaction2"
      android:textColor="@color/black"
      style="?android:attr/borderlessButtonStyle"
      />

</RelativeLayout>
